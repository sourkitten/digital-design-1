`timescale 1 ps/ 1 ps
module Question3_vlg_sample_tst(
	A,
	B,
	C,
	D,
	sampler_tx
);
input  A;
input  B;
input  C;
input  D;
output sampler_tx;

reg sample;
time current_time;
always @(A or B or C or D)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module Question3_vlg_check_tst (
	F,
	NOT_F,
	sampler_rx
);
input  F;
input  NOT_F;
input sampler_rx;

reg  F_expected;
reg  NOT_F_expected;

reg  F_prev;
reg  NOT_F_prev;

reg  F_expected_prev;
reg  NOT_F_expected_prev;

reg  last_F_exp;
reg  last_NOT_F_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	F_prev = F;
	NOT_F_prev = NOT_F;
end

// update expected /o prevs

always @(trigger)
begin
	F_expected_prev = F_expected;
	NOT_F_expected_prev = NOT_F_expected;
end



// expected F
initial
begin
	F_expected = 1'bX;
end 

// expected NOT_F
initial
begin
	NOT_F_expected = 1'bX;
end 
// generate trigger
always @(F_expected or F or NOT_F_expected or NOT_F)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected F = %b | expected NOT_F = %b | ",F_expected_prev,NOT_F_expected_prev);
	$display("| real F = %b | real NOT_F = %b | ",F_prev,NOT_F_prev);
`endif
	if (
		( F_expected_prev !== 1'bx ) && ( F_prev !== F_expected_prev )
		&& ((F_expected_prev !== last_F_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port F :: @time = %t",  $realtime);
		$display ("     Expected value = %b", F_expected_prev);
		$display ("     Real value = %b", F_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_F_exp = F_expected_prev;
	end
	if (
		( NOT_F_expected_prev !== 1'bx ) && ( NOT_F_prev !== NOT_F_expected_prev )
		&& ((NOT_F_expected_prev !== last_NOT_F_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port NOT_F :: @time = %t",  $realtime);
		$display ("     Expected value = %b", NOT_F_expected_prev);
		$display ("     Real value = %b", NOT_F_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_NOT_F_exp = NOT_F_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

